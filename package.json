{
  "name": "repo-viewer",
  "version": "0.4.3",
  "description": "代码仓库浏览器",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "dist": "electron-builder --win --x64",
    "arm": "electron-builder --linux --arm64"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^22.0.0",
    "electron-builder": "^24.4.0",
    "node-gyp": "^9.4.0"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "crypto": "^1.0.1",
    "diff": "^5.1.0",
    "diff2html": "^3.4.51",
    "fast-xml-parser": "^4.4.0",
    "fs-extra": "^11.1.1",
    "ini": "^4.1.1",
    "jstree": "^3.3.16",
    "sqlite3": "^5.1.6",
    "systeminformation": "^5.22.11",
    "winston": "^3.9.0"
  },
  "build": {
    "nsis": {
      "shortcutName": "repoviewer",
      "oneClick": false,
      "allowElevation": true,
      "installerIcon": "res/img/repo-viewer.ico",
      "uninstallerIcon": "res/img/repo-viewer.ico",
      "installerHeaderIcon": "res/img/repo-viewer.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "allowToChangeInstallationDirectory": true
    },
    "win": {
      "target": "nsis",
      "icon": "res/img/repo-viewer.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "res/img/repo-viewer.png"
    },
    "extraResources": [
      {
        "from": "res/img",
        "to": "icon",
        "filter": ["repo-viewer.ico", "repo-viewer.png"]
      }
    ]
  },
  "keywords": []
}
